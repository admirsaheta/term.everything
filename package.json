{
  "version": "0.5.1",
  "dependencies": {
    "canvas": "3.2.0",
    "open": "10.2.0"
  },
  "type": "module",
  "scripts": {
    "build": "npm run build:detect",
    "build:detect": "node -e \"console.log(process.platform === 'darwin' ? 'build:macos' : 'build:linux')\" | xargs npm run",
    "build:linux": "task build || echo 'Task not found, using meson directly' && cd c_interop && meson setup build && meson compile -C build",
    "build:macos": "cd c_interop && meson setup build --cross-file=../resources/macos.cross && meson compile -C build",
    "bun": "bun",
    "run": "npm run run:detect",
    "run:detect": "node -e \"console.log(process.platform === 'darwin' ? 'run:macos' : 'run:linux')\" | xargs npm run",
    "run:linux": "task || bun src/index.ts",
    "run:macos": "bun src/index_macos.ts",
    "task": "task"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "@types/bun": "^1.2.4",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "license": "AGPL-3.0-only"
}